@page "/"
@inject NavigationManager NavigationManager
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Class="root-container" Style="height: calc(100vh - 48px); padding-top: 12px;">
    <MudGrid>
        <!-- Hero Section -->
        <MudItem xs="12" Class="hero-section">
            <MudText Typo="Typo.h2" Class="text-center mb-4 white-text">
                Your Personal Weather Companion
            </MudText>
            <MudText Typo="Typo.h5" Class="text-center mb-4 white-text" Style="font-weight:300">
                Real-time weather updates and forecasts at your fingertips
            </MudText>
            <MudGrid Justify="Justify.Center" Class="gap-4">
                <MudItem>
                    <MudButton Variant="Variant.Filled" 
                              Color="Color.Primary" 
                              Size="Size.Large"
                              OnClick="@(() => NavigationManager.NavigateTo("/home"))"
                              StartIcon="@Icons.Material.Filled.Login">
                        Get Started
                    </MudButton>
                </MudItem>
                <MudItem>
                    <MudButton Variant="Variant.Outlined" 
                              Color="Color.Primary"
                              Size="Size.Large"
                              OnClick="@(() => NavigationManager.NavigateTo("/about"))"
                              StartIcon="@Icons.Material.Filled.Info">
                        Learn More
                    </MudButton>
                </MudItem>
            </MudGrid>
        </MudItem>

        <!-- Features Section -->
        <MudItem xs="12" Class="mt-3">
            <MudGrid>
                <MudItem xs="12" md="4">
                    <MudCard Elevation="0" Class="feature-card">
                        <MudCardHeader>
                            <CardHeaderAvatar>
                                <MudIcon Icon="@Icons.Material.Filled.QueryStats" Color="Color.Primary" Size="Size.Large" />
                            </CardHeaderAvatar>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h6">Real-Time Updates</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText>Get instant weather updates with accurate temperature, humidity, and wind data for any location worldwide.</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudCard Elevation="0" Class="feature-card">
                        <MudCardHeader>
                            <CardHeaderAvatar>
                                <MudIcon Icon="@Icons.Material.Filled.DateRange" Color="Color.Secondary" Size="Size.Large" />
                            </CardHeaderAvatar>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h6">5-Day Forecast</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText>Plan ahead with detailed 5-day weather forecasts featuring interactive charts and hourly predictions.</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>

                <MudItem xs="12" md="4">
                    <MudCard Elevation="0" Class="feature-card">
                        <MudCardHeader>
                            <CardHeaderAvatar>
                                <MudIcon Icon="@Icons.Material.Filled.Favorite" Color="Color.Error" Size="Size.Large" />
                            </CardHeaderAvatar>
                            <CardHeaderContent>
                                <MudText Typo="Typo.h6">Favorites</MudText>
                            </CardHeaderContent>
                        </MudCardHeader>
                        <MudCardContent>
                            <MudText>Save your favorite cities for quick access to weather information that matters to you.</MudText>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
            </MudGrid>
        </MudItem>

        <!-- Call to Action -->
        <MudItem xs="12" Class="mt-3 text-center">
            <MudPaper Class="cta-section pa-4" Elevation="0">
                <MudText Typo="Typo.h4" Class="mb-4">Ready to Start?</MudText>
                <MudText Typo="Typo.body1" Class="mb-3">Join thousands of users who trust our weather forecasts daily.</MudText>
                <MudButton Variant="Variant.Filled" 
                          Color="Color.Primary" 
                          Size="Size.Large"
                          OnClick="@(() => NavigationManager.NavigateTo("/login"))"
                          Class="px-8">
                    Create Account
                </MudButton>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>

<style>
    .root-container {
        padding: 12px 16px;
        overflow: hidden;
    }

    .hero-section {
        background: linear-gradient(135deg, rgb(100, 181, 246) 0%, rgb(30, 136, 229) 100%);
        padding: 36px 24px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .white-text {
        color: white;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
    }

    .feature-card {
        height: 100%;
        transition: transform 0.3s ease;
        background: rgba(var(--mud-palette-primary-rgb), 0.02);
    }

    .feature-card:hover {
        transform: translateY(-5px);
    }

    .cta-section {
        background: rgba(var(--mud-palette-primary-rgb), 0.03);
        border-radius: 12px;
    }

    .gap-4 {
        gap: 16px;
    }
</style>

